# Ensure only a number was passed in.

re='^[0-9]+$'
if ! [[ $1 =~ $re ]] ; then
    echo "error: Not a number" >&2; exit 1
fi


# Try 5 times to start this sidekiq instance,
# retrying if Monit is still stopping a previous instance.

n=0
until [ $n -ge 5 ]; do
    sudo /usr/bin/monit start sidekiq-$1
    [ $? -eq 0 ] && break
    n=$[$n+1]
    sleep 5
done
